{% extends "::base.html.twig" %}


{% block body %}
    {{ form_start(form, {'method': 'post', 'action': path('add_school'), 'attr': {'class': 'form-horizontal' }}) }}
    <div class="modal-header">
        <h4 class="modal-title">Ajouter Ecole</h4>
    </div>
    <div class="form-group">
        <label>Nom Ecole</label>
        {{ form_widget(form.fullName,{'attr':{'class':'form-control','placeholder':'Saisir  nom'}}) }}
    </div>
    <div class="form-group">
        <label>Address</label>
        {{ form_widget(form.address,{'attr':{'class':'form-control','placeholder':'Saisir  addresse'}}) }}
    </div>
    <div class="form-group">
        <label>Email</label>
        {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Saisir  email'}}) }}
    </div>
    <div class="form-group">
        <label>Telephone</label>
        {{ form_widget(form.tel,{'attr':{'class':'form-control','placeholder':'Saisir  telephone'}}) }}
    </div>
    <div class="form-group">
        <label>Nombre de place</label>
        {{ form_widget(form.nbPlace,{'attr':{'class':'form-control','placeholder':'Saisir  nombre de place'}}) }}
    </div>
    <div class="form-group">
        <label>speciality</label>
        {{ form_widget(form.speciality,{'attr':{'class':'form-control','placeholder':'Saisir  speciality'}}) }}
    </div>
    <div class="modal-footer">
        <button type="submit" value="submit" class="btn btn-block btn-primary btn-lg">Ajouter</button>
    </div>


    {{ form_end(form) }}
{% endblock %}
