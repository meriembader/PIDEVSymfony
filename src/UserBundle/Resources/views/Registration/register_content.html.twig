
{% trans_default_domain 'FOSUserBundle' %}


{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal ' }}) }}


    <div class="modal-header">
        <h4 class="modal-title">Ajouter Docteur</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Nom</label>
            {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Saisir votre nom'}}) }}
        </div>
        <div class="form-group">
            <label>Nom d'utilisateur</label>
            {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':"Saisir votre nom d'utilisateur"}}) }}
        </div>

        <div class="form-group">
            <label>Prenom</label>
            {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':"Saisir votre nom d'utilisateur"}}) }}
        </div>
        <div class="form-group">
            <label>telephone</label>
            {{ form_widget(form.tel,{'attr':{'class':'form-control','placeholder':'Saisir votre numero de telephone'}}) }}
        </div>
        <div class="form-group">
            <label>Disponibilite</label>
            {{ form_widget(form.dispoTime,{'attr':{'class':'form-control','placeholder':'Saisir votre temps disponible'}}) }}
        </div>
       <div class="form-group">
            <label>Statut</label>
           {{ form_widget(form.statut) }}
       </div>
      <div class="form-group">
            <label>Email</label>
          {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Saisir votre email'}}) }}
        </div>
    <div class="form-group">
            <label>Mot de passe </label>
        {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Saisir votre mot de passe'}}) }}
        </div>
    <div class="form-group">
            <label>Repete Mot de passe </label>
        {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'confirmer'}}) }}
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-block btn-primary btn-lg">Sign Up</button>
    </div>


        {{ form_end(form) }}














