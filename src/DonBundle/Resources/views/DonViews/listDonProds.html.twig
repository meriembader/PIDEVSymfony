{% extends 'base.html.twig' %}
{% block add %}
<button >
    <a href="{{ path('don_addDonProd') }}"><button class="au-btn au-btn-icon au-btn--blue" type="submit"> <i class="zmdi zmdi-plus"></i>Add</button></a>
    {% endblock %}
    {%  block body %}
    <link rel="stylesheet" href={{asset('vendors/datatables.net-bs4/css/dataTables.bootstrap4.min.css')}}>

    <div class="table-responsive table--no-card m-b-30">
        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>id_don</th>
                <th>id_prod</th>
                <th>qt</th>
                <th>date</th>
                <th>heure</th>
                <th>lieu</th>
                <th>User</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for prod in list_DonProd %}
            <tr>
                <td>{{ prod.idDon }}</td>
                <td>{{ prod.libelleProd }}</td>
                <td>{{ prod.qt }}</td>
                <td>{{ prod.date|date("m/d/Y") }}</td>
                <td>{{ prod.heure|date("H:i:s")  }}</td>
                <td>{{ prod.lieu }}</td>
                <td>{{ prod.username }}</td>
                <td><a href="{{ path('don_editDonProd',{'idDon': prod.idDon}) }}"><button class="btn btn-outline-warning"submit"><i class="zmdi zmdi-edit"></i></button></a>
    </td>
    <td>
        <a href="{{ path('don_deleteDonProd',{'idDon': prod.idDon}) }}"><button class="btn btn-outline-danger"submit"><i class="zmdi zmdi-delete"></i></button></a>
    </td>
    </tr>
{% endfor %}
    </tbody>
    </table>
    </div>
