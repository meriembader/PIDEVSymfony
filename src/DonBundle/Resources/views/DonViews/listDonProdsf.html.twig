{% extends 'baseFront.html.twig' %}
{% block banner %}
    <h1 class="banner-title">Historique des dons de produit</h1>
    <ol class="breadcrumb">
    </ol>
{% endblock %}
{%  block body %}
    <link rel="stylesheet" href={{asset('vendors/datatables.net-bs4/css/dataTables.bootstrap4.min.css')}}>

    <div class="table-responsive table--no-card m-b-30">
        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>id_prod</th>
                <th>qt</th>
                <th>date du rdv</th>
                <th>heure du rdv</th>
                <th>lieu du rdv</th>
                <th>date du don</th>
                <th>heure du don</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for prod in list_DonProd %}
            <tr>
                <td>{{ prod.libelleProd }}</td>
                <td>{{ prod.qt }}</td>
                <td>{{ prod.date|date("m/d/Y") }}</td>
                <td>{{ prod.heure|date("H:i:s")  }}</td>
                <td>{{ prod.lieu }}</td>
                <td>{{ prod.dateDon|date("m/d/Y") }}</td>
                <td>{{ prod.heureDon|date("H:i:s")  }}</td>

                <td><a href="{{ path('don_editDonProd',{'idDon': prod.idDon}) }}"><button style="width: 20px; height:20px"class="btn-warning"submit"><i class="zmdi zmdi-edit"></i></button></a>
    </td>
    <td>
        <a href="{{ path('don_deleteDonProd',{'idDon': prod.idDon}) }}"><button style="width: 20px; height:20px" class="btn-danger"submit"><i class=""></i></button></a>
    </td>
    </tr>
{% endfor %}
    </tbody>
    </table>
    </div>
